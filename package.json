{
  "name": "@package/name",
  "version": "0.0.0-development",
  "description": "A library starter template.",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{username}/{repo}"
  },
  "scripts": {
    "prepack": "unbuild",
    "dev": "vitepress dev docs",
    "build": "vitepress build docs",
    "serve": "vitepress serve docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "commit": "cz",
    "commit:all": "git add . && cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@apenhet/eslint-config": "latest",
    "c8": "^7.11.0",
    "commitizen": "^4.2.4",
    "eslint": "latest",
    "git-cz": "^4.8.0",
    "semantic-release": "^19.0.2",
    "unbuild": "latest",
    "vitepress": "^0.21.6",
    "vitest": "latest"
  },
  "eslintConfig": {
    "extends": "@apenhet",
    "ignorePatterns": [
      "!.vitepress"
    ]
  },
  "unbuild": {
    "declaration": true,
    "entries": [
      "./src/index"
    ],
    "rollup": {
      "emitCJS": true
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "release": {
    "branches": [
      "main",
      "master"
    ]
  }
}
